<h1>Listing cakes</h1>

<table>
  <tr>
    <th>Flavour</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cakes.each do |cake| %>
  <tr>
    <td><%= cake.flavour %></td>
    <td><%= cake.weight %></td>
    <td><%= link_to 'Show', cake %></td>
    <td><%= link_to 'Edit', edit_cake_path(cake) %></td>
    <td><%= link_to 'Destroy', cake, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

